# ========================================
# ENVIRONMENT VARIABLES FOR LOCAL DEVELOPMENT
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control!

# ========================================
# BACKEND SERVER CONFIGURATION
# ========================================
PORT=8080

# ========================================
# DATABASE CONFIGURATION
# ========================================
MYSQLHOST=localhost
MYSQLPORT=3306
MYSQLDATABASE=attendance_db
MYSQLUSER=root
MYSQLPASSWORD=your_mysql_password_here

# MySQL root password (for Docker only)
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here

# ========================================
# CORS CONFIGURATION
# ========================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3003,http://localhost:5173

# ========================================
# JWT SECURITY CONFIGURATION
# ========================================
# JWT Secret (REQUIRED - minimum 64 characters)
# Generate with: openssl rand -base64 64
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_VALUE_MINIMUM_64_CHARACTERS_REQUIRED

# ========================================
# FRONTEND CONFIGURATION
# ========================================
# API URL for React/Vite frontend
VITE_API_URL=http://localhost:8080/api

# ========================================
# PRODUCTION DEPLOYMENT NOTES
# ========================================

# 1. NEVER commit this file with real secrets to Git
# 2. Add .env to .gitignore
# 3. Use environment-specific .env files (.env.dev, .env.prod)
# 4. In production, use secrets management (AWS Secrets Manager, Azure Key Vault, etc.)
# 5. Rotate JWT_SECRET regularly
# 6. Use strong, unique passwords for each environment

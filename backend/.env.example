# ==========================================
# BACKEND ENVIRONMENT VARIABLES
# ==========================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to Git!

# Server Configuration
PORT=8080

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3003,http://localhost:5173

# Database Configuration
MYSQLHOST=localhost
MYSQLPORT=3306
MYSQLDATABASE=attendance_db
MYSQLUSER=root
MYSQLPASSWORD=your_database_password_here

# JWT Configuration
# Generate a new secret: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_here_minimum_64_characters_long_for_security

# Logging Level (optional)
# LOGGING_LEVEL=DEBUG
